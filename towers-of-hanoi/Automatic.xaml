<Page x:Class="towers_of_hanoi.Automatic"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:towers_of_hanoi"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Automatic">

    <Grid>
        <Viewport3D Name="Viewport" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Focusable="True"
            MouseMove="ViewportMouseMoved" MouseWheel="ViewportMouseScrolled"/>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom"
              Width="150" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Grid.Column="0" Grid.Row="1"
                    HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                    Width="50" Height="50"
                    CornerRadius="20,0,0,0"
                    BorderBrush="Black" BorderThickness="1,1,1,0">
                <Button Background="Transparent" BorderBrush="Transparent" Click="PreviousClicked">Previous</Button>
            </Border>
            <Border Grid.Column="1" Grid.Row="1"
                    HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                    Width="50" Height="50"
                    CornerRadius="0,0,0,0"
                    BorderBrush="Black" BorderThickness="1,1,1,0">
                <Button Background="Transparent" BorderBrush="Transparent" Click="PauseClicked">Pause</Button>
            </Border>
            <Border Grid.Column="2" Grid.Row="1"
                    HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                    Width="50" Height="50"
                    CornerRadius="0,20,0,0"
                    BorderBrush="Black" BorderThickness="1,1,1,0">
                <Button Background="Transparent" BorderBrush="Transparent" Click="NextClicked">Next</Button>
            </Border>
            <Slider Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Name="SpeedSlider" ValueChanged="SpeedChanged" Value="500" Minimum="0" Maximum="1000"></Slider>
        </Grid>
    </Grid>
</Page>
