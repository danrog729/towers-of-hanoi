<Page x:Class="towers_of_hanoi.Navigation.MultiplayerMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:towers_of_hanoi.Navigation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MultiplayerMenu">

    <Grid Height="450" Width="800">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0">Available players:</TextBlock>
            <StackPanel Name="ServerList"/>
        </Grid>
        <Button Grid.Row="1" Click="BackClicked" Width="100" HorizontalAlignment="Left">Back</Button>
        <StackPanel Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Width="100" Click="SwitchToGameCreation">Create Game</Button>
            <Button Width="100">Join Game</Button>
        </StackPanel>
    </Grid>
</Page>
