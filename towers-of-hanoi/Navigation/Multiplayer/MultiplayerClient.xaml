<Page x:Class="towers_of_hanoi.Navigation.Multiplayer.MultiplayerClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:towers_of_hanoi.Navigation.Multiplayer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MultiplayerClient">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Viewport3D Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Name="Viewport"/>

        <Grid Grid.Row="1" Grid.Column="0" Margin="10,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Name="DiscBox" VerticalAlignment="Center">Discs: 6</TextBlock>
            <TextBlock Grid.Row="1" Name="PoleBox" VerticalAlignment="Center">Poles: 3</TextBlock>
            <TextBlock Grid.Row="2" Name="BestOfBox" VerticalAlignment="Center">Best of: 1</TextBlock>
        </Grid>

        <TextBlock Grid.Row="1" Grid.Column="1" Name="Status" Margin="10" VerticalAlignment="Center">Waiting for player...</TextBlock>

        <Button Grid.Row="2" Grid.Column="0" Width="100" Margin="10" HorizontalAlignment="Left" Click="QuitClicked">Quit</Button>
        <Button Grid.Row="3" Grid.Column="1" Width="100" Margin="10" HorizontalAlignment="Right" Click="StartClicked" IsEnabled="False" Name="StartButton">Start</Button>
    </Grid>
</Page>
