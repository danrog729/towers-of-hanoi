<Page x:Class="towers_of_hanoi.Navigation.MultiplayerServer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:towers_of_hanoi.Navigation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MultiplayerServer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Viewport3D Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Name="Viewport"/>
        <Button Grid.Row="1" Grid.Column="0" Width="100" Margin="10" HorizontalAlignment="Left" Click="QuitClicked">Quit</Button>
        <Button Grid.Row="1" Grid.Column="1" Width="100" Margin="10" HorizontalAlignment="Right" Click="StartClicked" IsEnabled="False">Start</Button>
    </Grid>
</Page>
