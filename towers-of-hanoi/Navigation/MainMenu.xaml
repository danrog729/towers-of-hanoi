<Page x:Class="towers_of_hanoi.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:towers_of_hanoi"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="450"
      Title="MainMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Click="ResumeClicked">Resume</Button>
        <Button Grid.Row="1" Click="SingleplayerClicked">Singleplayer</Button>
        <Button Grid.Row="2" Click="MultiplayerClicked">Multiplayer</Button>
        <Button Grid.Row="3" Click="AutomaticClicked">Automatic</Button>
        <Button Grid.Row="4" Click="SettingsClicked">Settings</Button>
        <Button Grid.Row="5" Click="QuitClicked">Quit</Button>
    </Grid>
</Page>
