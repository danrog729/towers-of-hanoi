<Window x:Class="towers_of_hanoi.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:towers_of_hanoi"
        mc:Ignorable="d"
        Title="MainMenu" Height="600" Width="450"
        WindowStyle="None" ResizeMode="NoResize" MouseDown="DragWindow" ShowInTaskbar="False">

    <Grid Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Click="ResumeClicked">Resume</Button>
            <Button Grid.Row="1">Singleplayer</Button>
            <Button Grid.Row="2">Multiplayer</Button>
            <Button Grid.Row="3">Automatic</Button>
            <Button Grid.Row="4">Settings</Button>
            <Button Grid.Row="5">Quit</Button>
        </Grid>
    </Grid>
</Window>
