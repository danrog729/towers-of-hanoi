<UserControl x:Class="towers_of_hanoi.SettingsControls.FloatSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:towers_of_hanoi.SettingsControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="OutputMinimum" Grid.Column="0" Margin="5" VerticalAlignment="Center">0</TextBlock>
        <Slider Name="InputSlider" Grid.Column="1" VerticalAlignment="Center" ValueChanged="InputSliderValueChanged"></Slider>
        <TextBlock Name="OutputMaximum" Grid.Column="2" Margin="5" VerticalAlignment="Center">1</TextBlock>
        <TextBox Grid.Column="3" MinWidth="20" Name="InputTextBox" Margin="0,5,0,5"></TextBox>
    </Grid>
</UserControl>
