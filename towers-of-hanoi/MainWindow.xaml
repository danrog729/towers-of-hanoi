<Window x:Class="towers_of_hanoi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:towers_of_hanoi"
        mc:Ignorable="d"
        Title="Towers of Hanoi" Height="600" Width="800"
        WindowStyle="None" WindowState="Maximized"
        Closing="WindowClosing" KeyUp="WindowKeyUp">
    <Grid>
        <Frame Name="ContentFrame" NavigationUIVisibility="Hidden"/>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Top"
              Width="100" MinHeight="70">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0"
                    HorizontalAlignment="Stretch" VerticalAlignment="Top"
                    Width="50" Height="50"
                    CornerRadius="0,0,0,20"
                    BorderBrush="Black" BorderThickness="1,0,1,1">
                <Button Background="Transparent" BorderBrush="Transparent">Pause</Button>
            </Border>
            <Border Grid.Column="2"
                    HorizontalAlignment="Stretch" VerticalAlignment="Top"
                    Width="50" Height="50"
                    CornerRadius="0,0,20,0"
                    BorderBrush="Black" BorderThickness="1,0,1,1">
                <Button Background="Transparent" BorderBrush="Transparent" Click="MenuClicked">Menu</Button>
            </Border>
        </Grid>
    </Grid>
</Window>
