<Window x:Class="towers_of_hanoi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:towers_of_hanoi"
        mc:Ignorable="d"
        Title="Towers of Hanoi" Height="600" Width="800">
    <Grid>
        <Viewport3D Name="Viewport" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                    MouseMove="ViewportMouseMoved" MouseWheel="ViewportMouseScrolled"
                    MouseLeftButtonDown="ViewportLeftMouseDown" MouseLeftButtonUp="ViewportLeftMouseUp"/>
        <TextBox Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" TextChanged="DiscCountChanged" Name="DiscCount">6</TextBox>
    </Grid>
</Window>
