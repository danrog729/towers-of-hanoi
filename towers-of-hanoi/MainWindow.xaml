<Window x:Class="towers_of_hanoi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:towers_of_hanoi"
        mc:Ignorable="d"
        Title="Towers of Hanoi" Height="600" Width="800"
        WindowStyle="None" WindowState="Maximized"
        Closing="WindowClosing" KeyUp="WindowKeyUp">
    <Grid Background="{DynamicResource Background}">
        <Frame Name="ContentFrame" NavigationUIVisibility="Hidden"/>
        <Button Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Top" Width="50" Height="50" Click="MenuClicked">Menu</Button>
    </Grid>
</Window>
